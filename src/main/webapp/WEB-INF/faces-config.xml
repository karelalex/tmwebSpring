<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
>
    <application>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
    </application>
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>main</from-outcome>
            <to-view-id>/WEB-INF/views/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>project</from-outcome>
            <to-view-id>/WEB-INF/views/project.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>projectList</from-outcome>
            <to-view-id>/WEB-INF/views/project-list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>task</from-outcome>
            <to-view-id>/WEB-INF/views/task.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>taskList</from-outcome>
            <to-view-id>/WEB-INF/views/task-list.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registration</from-outcome>
            <to-view-id>/WEB-INF/views/reg-form.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>